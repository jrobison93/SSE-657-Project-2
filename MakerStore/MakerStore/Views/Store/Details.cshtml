@model MakerStore.Models.Product

@{
    ViewBag.Title = "Product - " + Model.Name;
}

<h2>Product: @Model.Name</h2>

<p>
    <img alt="@Model.Name" src="@Model.PictureURL" />
</p>

<div id="product-details">
    <p>
        <em>Category:</em>
        @Model.Category.Name
    </p>
    <p>
        <em>User:</em>
        @Model.User.UserName
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p class="button">
        @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = Model.ProductID }, null)
    </p>
</div>